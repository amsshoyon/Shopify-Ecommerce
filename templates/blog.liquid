

<div class="home">
    <div class="home_background parallax-window" data-parallax="scroll" data-image-src="images/shop_background.jpg"></div>
    <div class="home_overlay"></div>
    <div class="home_content d-flex flex-column align-items-center justify-content-center">
        <h2 class="home_title">{{template.name}}</h2>
    </div>
</div>

<!-- Blog -->

<div class="blog">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="blog_posts d-flex flex-row align-items-start justify-content-between">

                    <!-- Blog post -->
                    {% for article in blog.articles %}
                    <div class="blog_post">
                        <div class="blog_image" style="background-image:url({{ article.image.src | img_url: 'master' }}); max-height:200px;overflow:hidden;"></div>
                        <div class="blog_text">{{ article.title }}</div>
                        <div class="blog_button"><a href="{{article.url}}">Continue Reading</a></div>
                    </div>
                    {% endfor %}



                </div>
            </div>

        </div>
    </div>
</div>
